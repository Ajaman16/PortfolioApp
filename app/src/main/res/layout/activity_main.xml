<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.portfolioapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/my_nanodegree_apps"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:text="@string/popular_movies"
        android:id="@+id/project1"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:background="#F44336"/>

    <Button
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:text="@string/stock_hawk"
        android:id="@+id/project2"
        android:layout_below="@+id/project1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:background="#FF9800"/>

    <Button
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:text="@string/build_it_bigger"
        android:id="@+id/project3"
        android:layout_below="@+id/project2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:background="#FFEB3B"/>

    <Button
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:text="@string/make_your_app_material"
        android:id="@+id/project4"
        android:layout_below="@+id/project3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:background="#8BC34A"/>

    <Button
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:text="@string/go_ubiquitous"
        android:id="@+id/project5"
        android:layout_below="@+id/project4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:background="#03A9F4"/>

    <Button
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:text="@string/capstone"
        android:id="@+id/project6"
        android:layout_below="@+id/project5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:background="#673AB7"/>
</RelativeLayout>
